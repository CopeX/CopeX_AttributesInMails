$product = $this->getProduct();
foreach ($this->getDisplayedAttributes() as $attribute) {


    $label = $attribute->getFrontend()->getLabel($product);
    $value = $attribute->getFrontend()->getValue($product);
    if ($value != 0 && $value != "") {
        echo "<br />" . $label . ":" . $value;
    }
}